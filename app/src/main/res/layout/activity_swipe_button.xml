<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SwipeButtonActivity">

    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/swipe_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:button_background="@drawable/shape_button"
        app:button_image_disabled="@drawable/baseline_arrow_forward_ios_24"
        app:button_image_enabled="@drawable/baseline_add_24"
        app:button_left_padding="@dimen/_10sdp"
        app:button_right_padding="@dimen/_10sdp"
        app:button_top_padding="@dimen/_10sdp"
        app:button_bottom_padding="@dimen/_10sdp"
        app:inner_text="Swipe to Book Order"
        app:inner_text_background="@drawable/shape_rounded"
        app:inner_text_bottom_padding="18dp"
        app:inner_text_color="@android:color/white"
        app:inner_text_size="16sp"
        app:inner_text_top_padding="18dp" />

</RelativeLayout>